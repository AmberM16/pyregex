#!/usr/bin/env bash
set -eo pipefail

if [ -f "bin/install_nodejs" ]; then
    chmod +x bin/install_nodejs
    bin/install_nodejs
fi

# install_cache_dirs
export NODE_ENV=production
npm config set production true -global

npm install -sg bower grunt-cli

./install_assets_deps.sh

grunt clean build

echo "-----> Post-compile Done"
